#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_PATH=$(dirname $(readlink -f ${BASH_SOURCE%/*}))
DEPS_DIR="$BUILD_DIR/.cloudfoundry"

mkdir -p $CACHE_DIR
mkdir -p "$DEPS_DIR/0"
mkdir -p "$BUILD_DIR/.profile.d"

echo "export DEPS_DIR=\$HOME/.cloudfoundry" > "$BUILD_DIR/.profile.d/0000_set-deps-dir.sh"
# Install Playwright dependencies
apt-get update
apt-get install -y libnss3 libxslt1.1 libglib2.0-0 libfontconfig1 libpango-1.0-0 libx11-6 libxcomposite1 libxcursor1 libxdamage1 libxi6 libxtst6 libgdk-pixbuf2.0-0 libatk1.0-0 libatk-bridge2.0-0 libepoxy0 libgbm1

echo "=============================== RJ - Custom Dependencies ========================="


$BUILDPACK_PATH/bin/supply "$BUILD_DIR" "$CACHE_DIR" "$DEPS_DIR" 0
$BUILDPACK_PATH/bin/finalize "$BUILD_DIR" "$CACHE_DIR" "$DEPS_DIR" 0
